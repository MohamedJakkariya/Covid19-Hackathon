<%- include('header') %>
    <!-- Go to Unverified Profile  -->
    <!-- <% if(noOfUsers > 0){ %> -->
      <div
        class="unverified-profile"
        data-placement="right"
        data-toggle="tooltip"
        title="<%= noOfUsers %> Unverified Profile here!"
      >
      <a href="/admin/unverified-profiles">
        <span id="close-icon" class="fa fa-exclamation-circle text-warning"></span>
      </a>
      </div>
    <!-- <% } %> -->
    

    <!-- Announcemnt Icon  -->
    <form action="#" method="post">
      <div class="announcement">
        <span class="fa fa-close" id="close-announcement"></span>
        <span
          class="fa fa-bullhorn"
          data-placement="right"
          data-toggle="tooltip"
          title="Announcemnt"
          id="announcement"
        ></span>
        <textarea type="text" id="send-announcement" class="btn btn-primary">
Announcement :
        Enter your message here...
              </textarea
        >
        <button type="submit" id="submit-msg">
          <span class="fa fa-envelope"></span>
        </button>
      </div>
    </form>

    <!-- pdf Icon  -->
    <form action="#" method="post">
      <div
        class="pdf"
        data-placement="right"
        data-toggle="tooltip"
        title="Generate PDF"
      >
        <span id="close-pdf" class="fa fa-close"></span>
        <span class="fa fa-file-pdf-o" id="pdf"></span>
        <input
          type="number"
          placeholder="Enter the year"
          id="send"
          class="btn btn-primary"
        />
        <button type="submit" id="submit-pdf">
          <span class="fa fa-send" id="fa-send"></span>
        </button>
      </div>
    </form>

    <!-- Toll form  -->
    <div id="toll-add">
      <div class="heading">
        <h2 class="text-secondary">Adding Toll Number</h2>
        <button type="button" class="btn btn-outline-dark close-toll">&times;</button>
      </div>
      <form id="toll-form">
        <div class="form-group">
          <label for="name" class="text-secondary">Source</label>
          <input type="text" required="required" class="form-control" name="name" id="name">
        </div>

        <!-- State  -->
        <div class="form-group">
          <label for="state">State</label>
          <select id="state" onchange='selct_district(this.value)' name="state" 
            class="custom-select">
          </select>
        </div>

        <div class="form-group">
          <label for="number" class="text-secondary">Number</label>
          <input type="text" required="required" class="form-control" name="number" id="number">
        </div>
        <div class="btn-group">
          <a href="/admin/toll-list" class="btn btn-outline-primary">View all</a>
          <button type="submit" id="submit" class="btn btn-outline-dark">Add</button>
          <span 
          class="success fa fa-check-circle text-success"
          data-placement="right"
          data-toggle="tooltip"
          title="Successfully Added"></span>
          <span 
          class="override fa fa-exclamation-circle text-warning" 
          data-placement="right"
          data-toggle="tooltip"
          title="Already the number is exist"></span>
          <span 
          class="error fa fa-times-circle text-danger"
          data-placement="right"
          data-toggle="tooltip"
          title="Something went wrong! like network connection"></span>
        </div>
      </form>
    </div>


    <div id="admin-nav">
      <h1>Dashboard</h1>
      <div class="right">
        <div class="search"  data-toggle="tooltip" data-placement="bottom" title="Click to view search option">
          <span class="fa fa-search"></span>
        </div>
        <span data-toggle="tooltip" data-placement="bottom" title="All Notification" class="fa fa-bell-o"></span>
        <span data-toggle="tooltip" data-placement="bottom" title="Email Inbox" class="fa fa-envelope-o"></span>
        <p  data-toggle="tooltip" data-placement="bottom" title="Click to Logout">
          <a href="/admin/logout">
          Logout <span class="fa fa-sign-out"></span>
          </a>
        </p>
      </div>
    </div>
    

    <div id="admin-dashboard">
      <div class="side-panel">

        <div class="profile">
          <img src="../img/profile2.jpg" alt="">
        </div>
        <div class="dropdown">
          <button
            type="button"
            id="toggle-apply"
            class="btn btn-primary"
            data-toggle="dropdown"
          >
            Apply
            <span class="fa fa-caret-down"></span>
          </button>
          <div id="apply">
            <a class="dropdown-item" href="/admin/symptoms">Symtoms Watcher</a>
            <a class="dropdown-item" href="/admin/food">Food Request</a>
            <a class="dropdown-item" href="/admin/transport">Transport Pass Request</a>
            <a class="dropdown-item" href="/admin/personal">Personal Pass Request</a>
            <a class="dropdown-item" href="/admin/hospital">Hospital Admission Request</a>
            <a class="dropdown-item" href="/admin/doctor">Doctor Appointment Request</a>
            <a class="dropdown-item" href="/admin/lab">Lab Result Request</a>
            <a class="dropdown-item" href="/admin/volunteers">Volunteers</a>
          </div>
        </div>

        <button class="btn btn-primary" id="show-toll-form">Add Toll-Free numbers</button>
        <button class="btn btn-primary">Fund Information</button>
        <button class="btn btn-primary">Update Covid Products</button>
      </div>

      <!-- Main panel  -->
      <div class="main-panel">
        <div class="box-container-1">
          <div class="box">
            <p><span class="fa fa-user"></span></p>
            <h3>New User</h3>
            <p class="mt-2"><%= noOfUsers %></p>
          </div>

          <div class="box">
            <p><span class="fa fa-sticky-note"></span></p>
            <h3>Applications Pending</h3>
            <p class="mt-2"><%= noOfApplication %></p>
          </div>

          <div class="box">
            <p><span class="fa fa-users"></span></p>
            <h3>Volunteers</h3>
            <p class="mt-2"><%= noOfVolunteers %></p>
          </div>

          <div class="box">
            <p><span class="fa fa-rupee"></span></p>
            <h3>Fund Help</h3>
            <p class="mt-2">0</p>
          </div>
        </div>

      <div class="box-23">
        <!-- Box - 2 -->
        <div class="box-container-2">
          <div class="box">
            <p><span class="fa fa-hospital-o"></span></p>
            <h3>Hospital Admission</h3>
            <p class="mt-2"><%= noOfHospitalAdmission %></p>
          </div>

          <div class="box">
            <p><span class="fa fa-user-md"></span></p>
            <h3>Doctor Admission</h3>
            <p class="mt-2"><%= noOfDoctorAdmission %></p>
          </div>

          <div class="box">
            <p><span class="fa fa-flask"></span></p>
            <h3>Lab Results</h3>
            <p class="mt-2"><%= noOfLabResult %></p>
          </div>

          <div class="box">
            <p><span class="fa fa-info"></span></p>
            <h3>Symptoms Review</h3>
            <p class="mt-2"><%= noOfSymptoms %></p>
          </div>
        </div><!--Box - 2 end-->

        <div class="box-container-3">

        </div>
      </div><!--End of box 23-->
      
        <div class="chart-analysis mt-4">
          <div class="chart">
            <div class="option row">
              <div class="form-group col-md-2">
                <select class="form-control" id="options">
                  <option value="line">Line</option>
                  <option value="bar">Bar</option>
                  <option value="pie">Pie</option>
                  <option value="polarArea">Polar Area</option>
                  <option value="radar">Radar</option>
                  <option value="doughnut">Doughnut</option>
                </select>
              </div>
              <div class="radio-group col-sm-2 py-2 text-center">
                <input type="radio" id="primary" checked id="a-select" class="checkmark" onclick="showGraph('active')" name="option">
                <label for="a-select">
                  <div class="check"></div>
                  Active 
                </label>
              </div>

            <div class="radio-group col-sm-2 py-2 text-center">
              <input type="radio" id="c-select" class="checkmark" onclick="showGraph('confirmed')" name="option">            
              <label for="c-select">
                <div class="check"></div>
                Confirmed
              </label>
              </div>

              <div class="radio-group col-sm-2 py-2 text-center">
                <input type="radio" id="d-select" class="checkmark" onclick="showGraph('deaths')" name="option">        
                <label for="d-select">
                  <div class="check"></div>
                  Deaths
                </label>
              </div>
              <div class="radio-group col-sm-2 py-2 text-center">
                <input type="radio" id="r-select" class="checkmark" onclick="showGraph('recovered')" name="option">        
                <label for="r-select">
                  <div class="check"></div>
                  Recovered
                </label>
              </div>
              <div class="radio-group col-sm-2 py-2 text-center">
                <input type="radio" id="r-select" class="checkmark" onclick="showGraph('all')" name="option">        
                <label for="r-select">
                  <div class="check"></div>
                  All
                </label>
              </div>
          </div>
          <canvas id="india-chart"></canvas>
        </div>        
      </div><!--Box-3 end-->
    </div>
    </div>

    <%- include('chat-box') %>

    <%- include('footer') %>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
    <script src="../js/fetchAPI.js"></script>
    <script src="../js/admin-panel.js"></script>
    <script src="../js/state.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="../js/admin-chat.js"></script>
  </body>
  </html>