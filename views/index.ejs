    <%- include('navbar') %>

    <!-- Showcase  -->
    <section id="home">
      <div id="caption">
        <h1>Welcome to Disaster Help</h1>
        <p>
          <q>The starting point of all achievements is desire.</q> <br /><span
            >-Napoleon Hill</span
          >
        </p>
      </div>
    </section>

    <div class="title">
      <h1><span class="highlight">Covid19</span> Status</h1>
    </div>

    <section id="statistics">
      <div class="analysis">
        <div class="box">
          <select class="form-control" onchange="getCountryReport()" id="country">
            <option value="Global">World</option>
            <option value="India">India</option>
            <option value="China">China</option>
            <option value="Pakistan">Pakistan</option>
            <option value="Italy">Italy</option>
            <option value="Australia">Australia</option>
            <option value="America">Russia</option>
          </select>
        </div>
        <div class="box">
          <img src="../img/icon.png" alt="" />
          <div class="value">
            <h3 id="confirmed">0</h3>
            <p>Total Case</p>
          </div>
        </div>
        <div class="box">
          <img src="../img/icon.png" alt="" />
          <div class="value">
            <h3 id="active">0</h3>
            <p>Active Cases</p>
          </div>
        </div>
        <div class="box">
          <img src="../img/icon.png" alt="" />
          <div class="value">
            <h3 id="deaths">0</h3>
            <p>Deaths</p>
          </div>
        </div>
        <div class="box">
          <img src="../img/icon.png" alt="" />
          <div class="value">
            <h3 id="recovered">0</h3>
            <p>Recovered</p>
          </div>
        </div>        
      </div>

      <div class="chart">
          <div class="option">
            <div class="radio-group">
              <input type="radio" checked id="a-select" class="checkmark" onclick="showGraph('active')" name="option">
              <label for="a-select">
                <div class="check"></div>
                Active
              </label>
            </div>

          <div class="radio-group">
            <input type="radio" id="c-select" class="checkmark" onclick="showGraph('confirmed')" name="option">            
            <label for="c-select">
              <div class="check"></div>
              Confirmed
            </label>
            </div>

            <div class="radio-group">
              <input type="radio" id="d-select" class="checkmark" onclick="showGraph('deaths')" name="option">        
              <label for="d-select">
                <div class="check"></div>
                Deaths
              </label>
            </div>
            <div class="radio-group">
              <input type="radio" id="r-select" class="checkmark" onclick="showGraph('recovered')" name="option">        
              <label for="r-select">
                <div class="check"></div>
                Recovered
              </label>
            </div>
        </div>
        <canvas id="chart"></canvas>
      </div>
    </section>

    <div class="title">
      <h1>
        STAY <span class="highlight">HOME</span> SAVE<span class="highlight"
          >LIVES</span
        >
