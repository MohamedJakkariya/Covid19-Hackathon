    <script>
      $(function() {
        $('#home').vegas({
          slides: [
            { src:'../img/slides/slide-1.jpg' },
            { src:'../img/slides/slide-2.jpg' },
            { src:'../img/slides/slide-3.jpg' },
            { src:'../img/slides/slide-4.jpg' },
