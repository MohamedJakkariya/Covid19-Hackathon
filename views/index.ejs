            { src:'../img/slides/slide-6.jpg' },
          ],
          align: 'center'
        });

        // navbar show and hide effect 
        window.addEventListener('scroll', (e) => {
          if($('html').scrollTop() > 50){
            $('#header').css({
              'backgroundColor' : '#cc0e74',
